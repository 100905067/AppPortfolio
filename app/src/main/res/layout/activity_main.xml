<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="com.amritapritam.www.appportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="My Nanodegree Apps" />

    <Button
        android:id="@+id/firstProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_weight="1"
        android:onClick=""/>
    <Button
        android:id="@+id/secProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_gravity="center"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/thirdProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_gravity="center"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/fourthProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_gravity="center"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/fifthProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_gravity="center"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/sixthProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAPSTONE:MY OWN APP"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorOrange"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout>
